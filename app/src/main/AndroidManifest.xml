<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.letsproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Launcher">

        </activity>

        <activity
            android:name=".ProfileDetailsActivity"
            android:label="@string/title_activity_profile_details"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.example.android.letsproject.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.letsproject.MainActivity" />
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_profile_details"
            android:theme="@style/AppTheme.Dark" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ProjectDetailsActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_project_details"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.example.android.letsproject.ProjectsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.letsproject.ProjectsActivity" />
        </activity>

        <activity
            android:name=".ProjectsActivity"
            android:label="@string/title_activity_projects"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.example.android.letsproject.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.letsproject.MainActivity" />
        </activity>

        <activity
            android:name=".CreateProjectActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_create_project"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.example.android.letsproject.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.letsproject.MainActivity" />
        </activity>

        <activity android:name=".SignupActivity" android:theme="@style/AppTheme.Dark" />

    </application>

</manifest>
